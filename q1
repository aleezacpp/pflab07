#include <stdio.h>
int main(){
    int x; //size of array
    int sum=0;
    int v; //user input
    printf("enter array size : \n");
    scanf("%d",&x);
    int arr[x];
    for (int i=0;i<=x-1;i++){
        printf("input value for arr[%d] : \n", i);
        scanf("%d",&arr[i]);
        sum=arr[i]+sum;
    }
    
    printf("sum of %d array values : %d", x, sum);
    return 0;
}
